<% requests.forEach(element => { %>
    <% if (element.status == 'pending') { %>
        <div class="request-card">
            <h3>You have a friend request from <span class="request-name"><%= element.Username %></span></h3>
            <form action="/request/setstatus" method="post">
                <input type="hidden" value="<%= element.Username %>" name="sender">
                <div class="button-group">
                    <button type="submit" value="accept" name="status" class="accept-btn">Accept</button>
                    <button type="submit" value="reject" name="status" class="reject-btn">Reject</button>
                </div>
            </form>
        </div>
    <% } %>
<% }) %>